<% layout('layouts/boilerplate') %>
<div class="row mt-3">
<div class="col-8 offset-2">
     
   <form method="post" action="/listings" class="needs-validation" novalidate>
        <div class="mb-3">
        <label for="title" class="from-label">Title:</label>
   <input name="listing[title]" class="form-control" placeholder='enter title' required>
<div class="valid-feedback">Title good</div>   
</div>
   
   <div class="mb-3">
    <label for="description" class="from-label">Description:</label>
   <textarea name="listing[description]" class="form-control" placeholder='enter description' required> </textarea>
<div class="invalid-feedback">Please enter short description</div>   
</div>
   <div class="mb-3">
    <label for="image" class="from-label">Image:</label>
   <input name="listing[image]" class="form-control" placeholder='enter image URL/Link'>
   </div>
   <div class="row">
   <div class="mb-3 col-md-4">    
    <label for="price" class="from-label">Price:</label>
   <input name="listing[price]" class="form-control" placeholder='enter price' type="number" required>
<div class="invalid-feedback">Price should be vaild</div>      
</div>

  
   <div class="mb-3 col-md-8">
    <label for="country" class="from-label">Country:</label>
   <input name="listing[country]" class="form-control" placeholder='enter country' type="text"
   required>
   <div class="invalid-feedback">country name should be vaild</div>
   </div>
    </div>
   <div class="mb-3">
    <label for="location" class="from-label">Location:</label>
   <input name="listing[location]" class="form-control" placeholder='enter location' type="text" required>
<div class="invalid-feedback">location name should be vaild</div>   
</div>
   <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>

</div>
</div>
